{
  "name": "vscode-hsx",
  "displayName": "Haskell HSX",
  "version": "0.3.1",
  "description": "Syntax Highlighting And IntelliSense For Haskell HSX QuasiQuotes",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ihp",
    "hsx",
    "haskell"
  ],
  "repository": {
    "url": "https://github.com/s0kil/vscode-hsx.git"
  },
  "license": "MIT",
  "publisher": "s0kil",
  "main": "./dist/extension",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "bundle": "rollup -c",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "vscode:prepublish": "npm install && npm run compile && npm run bundle",
    "package": "vsce package"
  },
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.haskell"
        ],
        "scopeName": "inline.hsx",
        "path": "./syntaxes/hsx.json",
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css",
          "source.css": "css"
        }
      },
      {
        "injectTo": [
          "source.haskell"
        ],
        "scopeName": "inline.hsx.injection",
        "path": "./syntaxes/hsx-injection.json",
        "embeddedLanguages": {
          "meta.embedded.block.hsx": "haskell"
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/node": "^17.0.23",
    "esbuild": "^0.14.32",
    "rollup": "^2.70.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.6.3"
  },
  "engines": {
    "vscode": "^1.57.0"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  }
}
