{
  "name": "vscode-hsx",
  "displayName": "Haskell HSX",
  "version": "0.3.1",
  "description": "Syntax Highlighting And IntelliSense For Haskell HSX QuasiQuotes",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ihp",
    "hsx",
    "haskell"
  ],
  "repository": {
    "url": "https://github.com/s0kil/vscode-hsx.git"
  },
  "license": "MIT",
  "publisher": "s0kil",
  "main": "./dist/extension",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "bundle": "rollup -c",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "vscode:prepublish": "npm install && npm run compile && npm run bundle",
    "package": "vsce package"
  },
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.haskell"
        ],
        "scopeName": "inline.hsx",
        "path": "./syntaxes/hsx.json",
        "embeddedLanguages": {
          "meta.embedded.block.hsx": "html",
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript"
        }
      },
      {
        "injectTo": [
          "source.haskell"
        ],
        "scopeName": "inline.hsx.injection",
        "path": "./syntaxes/hsx-injection.json",
        "embeddedLanguages": {
          "meta.embedded.block.haskell": "haskell",
          "source.haskell": "haskell"
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0-14",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/node": "^17.0.23",
    "esbuild": "^0.14.32",
    "rollup": "^2.70.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "typescript": "^4.7.0-dev.20220406"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  }
}
